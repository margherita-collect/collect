<%= render 'layouts/header1' %>

<h1>商品詳細ページ</h1>


<div class="shouArea clearfix">
    <div class="left cdImage">
        <!-- 商品画像 -->
    <%= attachment_image_tag @product, :image, :fill, 60, 60, format: 'jpeg' %> 
    </div>
    <div class="right cdImage">
        <!-- 商品画像 -->
        <p class="productTitle">
            <%= @product.product_name %>
        </p>
        <p class="productIntro">
            <%= @product.artist.artist_name %>
        </p>
        <p class="productIntro">
            <%= @product.genre.genre_name %>
        </p>
        <p class="productIntro">
            <%= @product.label.label_name %>
        </p>
        <p class="productPrice">
            <%= @product.price %>
        </p>
        <p>
            <%= form_tag(current_user, url: user_carts_path(user_id: current_user.id), method: :post) do |f| %>

            <%= select_tag :quantity, @stock_array %>
            <%= submit_tag "カートに追加" %>
            <% end %>
        </p>
        <p>
            <% if @product.stock == 0 %>
            <p>売り切れ</p>
            <% end %>
        </p>
        <p>
            
        </p>
    </div>
</div>



<table>
    <tbody>
        <tr>
            <td><% @product.discs.each do |disc| %></td>
            <td><%= disc.disc_name %></td>
            <td><% @product.discs.song.each do |song| %></td>
            <td><%= song.song_name %></td>
        <% end %>
        <% end %>
    </tr>
</tbody>
</table>