

<%  @products.each do |product|%>

   <%= link_to product_path(product.id) do %>
       <%= attachment_image_tag product, :image, :fill, 60, 60, format: 'jpeg' %>
    <% end %>

    <%= product.product_name %>

    <!-- アーティスト名 -->
    <%= product.artist_id %>

    <!-- 価格 -->
    <%= product.price %>

    <!-- ステータス -->
    <%= product.status %>



<% end %>
