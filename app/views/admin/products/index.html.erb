<%= render 'layouts/header2' %>

<br>
<%= link_to "新規商品追加", new_admin_product_path %>
<br>
<%= link_to "マスター追加", admin_master_registration_path %>
<br>

<h1>管理者商品一覧</h1>
<% @products.each do |product| %>

    <table style="border: 2px black solid;">
        <tbody>
            <tr>
                <td>
                    <!-- 商品画像 -->
                    <%= link_to admin_product_path(product.id) do %>
                        <%= attachment_image_tag product, :image, :fill, 60, 60, format: 'jpeg' %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td>
                    <!--  商品名 -->
                    <%= product.product_name %>
                </td>
            </tr>
            <tr>
                <td>
                    <!-- アーティスト名 -->
                    <%= product.artist_id %>
                </td>
            </tr>
            <tr>
                <td>
                    <!-- 価格 -->
                    <%= product.price %>
                </td>
            </tr>
            <tr>
                <td>
                    <!-- ステータス -->
                    <%if product.status %>
                        <h4>販売中</h4>
                    <% else %>
                        <h4>販売停止中</h4>
                    <% end %>
                </td>
            </tr>
        </tbody>
    </table>
<% end %>



