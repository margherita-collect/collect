<h1>新規商品登録</h1>
<!-- form_for部分 -->
<%= form_for(@product, url: admin_products_path, method: :post) do |f| %>


    <h4>商品名</h4>
    <%= f.text_field :product_name %>

    <h4>商品画像</h4>
    <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <h4>レーベルID</h4>
    <%= f.text_field:label_id %>

    <h4>ジャンルID</h4>
    <%= f.text_field:genre_id %>

    <h4>価格（税抜き）</h4>
    <%= f.text_field :price %>

    <h4>在庫数</h4>
    <%= f.text_field :stock %>

    <h4>ステータス（販売中/販売停止中）</h4>
    <%= f.text_field :status %>

    <h4>アーティストID</h4>
    <%= f.text_field :artist_id %>

    <h4>ディスク名</h4>
    <%= f.text_field :disc_name %>

    <h4>ディスク内の曲名</h4>
    <%= f.text_field :song_name %>

    <%= f.submit '保存' %>

<% end %>
