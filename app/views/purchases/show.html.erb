<%= render 'layouts/header1' %>

<p>購入情報確定</p>
<table>
	<thead>
		<tr>
			<th>商品名　</th>
			<th>枚数　</th>
			<th>購入価格　</th>
		</tr>
	</thead>
	<tbody>
		<% @purchases.each do |purchase| %>
			<% purchase.purchase_products.each do |purchase_product| %>
			<tr>
				<td><%= purchase_product.product.product_name %></td>
				<td><%= purchase_product.quantity %></td>
				<td><%= purchase_product.price %></td>
			</tr>
			<p>合計</p>
			<p><%= purchase_product.quantity*purchase_product.price %></p>
			<% end %>
		<% end %>
	</tbody>
</table>

<p>決済方法</p>

<label><%= f.radio_button, "クレジットカード決済" %> クレジットカード決済 </label>

<label><%= f.radio_button, "代引引換" %> 代引引換</label>

<p>住所</p>
<ul>
  <li><input type="radio" name="btn" id="a" checked="checked">既存の住所を使う</li>
  <li><input type="radio" name="btn" id="b">新しい住所を使う</li>
</ul>
 
<div class="text text01">
	<% @purchases.each do |purchase| %>
	 <p><%= purchase.zip_code %></p>
	 <p><%= purchase.address %></p>
	<% end %>
</div>
<div class="text text02">
	<%= form_for(@user) do |f| %>
	<p>
		〒<%= f.text_field :zip_code %>
	</p>
	<p>
		<%= f.text_field :address %>
	</p>
	<% end %>
</div>



