<h1>ユーザ情報編集ページ</h1>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label class="control-label sr-only" for="inputSurname">姓</label>
        <%= f.text_field :surname, autofocus: true, class:"form-control", id:"inputSurname", placeholder:"姓"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
    </div>

  

   <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>